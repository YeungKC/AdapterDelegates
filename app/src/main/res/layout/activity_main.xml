<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
	<Button
		android:id="@+id/multi_type"
		android:layout_width="match_parent"
		android:text="MULTI TYPE"
		android:layout_height="wrap_content"/>

	<Button
		android:id="@+id/multi_type_span"
		android:layout_width="match_parent"
		android:text="MULTI TYPE(SPAN)"
		android:layout_height="wrap_content"/>

	<Button
		android:id="@+id/single_select"
		android:layout_width="match_parent"
		android:text="SINGLE SELECT"
		android:layout_height="wrap_content"/>

	<Button
		android:id="@+id/multi_select"
		android:layout_width="match_parent"
		android:text="MULTI SELECT"
		android:layout_height="wrap_content"/>

	<Button
		android:id="@+id/rv_nested"
		android:layout_width="match_parent"
		android:text="RECYCLER VIEW NESTED"
		android:layout_height="wrap_content"/>
</LinearLayout>